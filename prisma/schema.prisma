generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String @unique
  email String @unique
  password String 
  isVerified Boolean @default(false)
  verifyCode   String
  verifyCodeExpiry DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  createdCompanyUsers Company[] // relation of user who cretaes company

  @@map("users")
}


model Company {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  email String?
  createdsUserId String @db.ObjectId // who creates company
  createdUser User @relation(fields: [createdsUserId] , references: [id])
  sokcetRoomName String 
  verifyCode String?
  verifyCodeExpiry DateTime?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
